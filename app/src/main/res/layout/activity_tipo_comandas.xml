<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    tools:context=".ViewModel.TipoComandas">

    <Button
        android:id="@+id/idBtnVendas"
        android:layout_width="186dp"
        android:layout_height="124dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="164dp"
        android:backgroundTint="@color/Button"
        android:onClick="vendasComanda"
        android:text="Vendas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnAluguel"
        android:layout_width="186dp"
        android:layout_height="124dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/Button"
        android:onClick="aluguelComanda"
        android:text="Aluguel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnVendas" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/borda_recycleview"
        android:text="Comandas"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>