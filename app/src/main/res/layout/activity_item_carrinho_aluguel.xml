<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/textNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$0.00"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textNome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textQtdAluguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qtd: 0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textPreco"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnDeletarCarrinhoAluguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toEndOf="@+id/btnEditarCarrinhoAluguel"
        app:layout_constraintTop_toBottomOf="@+id/textNome"
        app:srcCompat="@drawable/excluir" />

    <ImageButton
        android:id="@+id/btnEditarCarrinhoAluguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNome"
        app:srcCompat="@drawable/editar" />

</androidx.constraintlayout.widget.ConstraintLayout>